<mvc:View
    controllerName="iitp.zclb23006.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <l:HorizontalLayout id = 'idVert'>
                        <l:content>
                            <Label id="lblTeam" text="Team Name"></Label>
                            <Input id = "inpTeam" description="Enter Team Name"></Input>
                            <Button id = "btnSearch" text="Search" press = "onClick"></Button>
                        </l:content>
                    </l:HorizontalLayout>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
